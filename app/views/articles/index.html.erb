  <h1 class="text-2xl mb-3 font-sans">Hello, articles on Kinsta!</h1>

  <ul class="list-disc list-inside mb-4">
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  </ul>

  <%= link_to "New Article", new_article_path %>
</div>